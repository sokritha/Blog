<%- include('partials/header') -%>

<h1>Home</h1>
<p><%= homeContent %></p>
<% homePosts.forEach(post => { %>
    <h1><%= post.title %></h1>
    <% if (post.content.length > 100){ %>
        <p style="display: inline-block;"><%= post.content.substring(0,100) + "..." %></p>
        <a href="/posts/<%= post._id %>">Read more</a>
    <% }else{ %>
        <p><%= post.content %></p>
    <% } %>
    
<% }); %>

<%- include('partials/footer') -%>
